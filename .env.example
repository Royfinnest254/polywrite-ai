# ============================================================================
# POLYWRITE ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your values
# ============================================================================

# Supabase Configuration
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# JWT Secret (same as Supabase JWT secret)
# Get from: Supabase Dashboard > Settings > API > JWT Settings
JWT_SECRET=your-jwt-secret-here

# Rate Limiting Configuration (Cost & Abuse Control)
# Hard limits - no grace period, no soft warnings
RATE_LIMIT_REQUESTS_PER_MINUTE=5
RATE_LIMIT_REQUESTS_PER_DAY=50

# Semantic Similarity Thresholds (0.0 to 1.0)
# Higher = more similar = safer
# Conservative defaults: false warnings OK, false safety NOT OK
THRESHOLD_SAFE=0.80
THRESHOLD_RISKY=0.60
# Below THRESHOLD_RISKY = dangerous

# AI Provider Configuration
# Options: placeholder (for testing), openai (production)
AI_PROVIDER=placeholder
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# Anthropic Configuration (Claude - recommended for AI proposals)
# Get key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
